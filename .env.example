# codex7.ai Environment Variables Example

# API Configuration
PORT=8000
HOST=0.0.0.0

# AI Transcription Architecture (100% Free & Open Source)
# Choose model based on your VRAM/Compute:
# - tiny:   Fastest, lowest accuracy (~1GB VRAM)
# - small:  Good balance (~2GB VRAM)
# - medium: High accuracy (~5GB VRAM)
# - large-v3: Best accuracy, multilingual (Requires GPU with 8GB+ VRAM or patience on CPU)
WHISPER_MODEL=large-v3
USE_GPU=false

# Google Sheets Configuration
# You will need a service_account.json and the Sheet ID
GOOGLE_SHEETS_ID=your_google_sheet_id_here
GOOGLE_APPLICATION_CREDENTIALS=credentials.json

# Development
DEBUG=True
